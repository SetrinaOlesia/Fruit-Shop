<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>fruit_shop.controllers.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>fruit_shop.controllers.UsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>fruit_shop.controllers.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>fruit_shop.controllers.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/injectData</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>deleteUsers</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteUsers</servlet-name>
        <servlet-class>fruit_shop.controllers.DeleteUsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>fruit_shop.controllers.ProductController</servlet-class>
            </servlet>
    <servlet>
        <servlet-name>ProductAdding</servlet-name>
        <servlet-class>fruit_shop.controllers.ProductAddingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductAdding</servlet-name>
        <url-pattern>/productAdding</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllProducts</servlet-name>
        <servlet-class>fruit_shop.controllers.GetAllProductManageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllProducts</servlet-name>
        <url-pattern>/getAllProducts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>fruit_shop.controllers.DeleteProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>purchase</servlet-name>
        <servlet-class>fruit_shop.controllers.GetAllProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>purchase</servlet-name>
        <url-pattern>/purchase</url-pattern>
    </servlet-mapping>

</web-app>
